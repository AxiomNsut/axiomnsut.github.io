---
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";
import Menu from "../components/Menu.astro";

export interface Props {
  title: string;
  description: string;
  footer?: boolean;
  menu?: boolean;
  noresize?: boolean;
}

const {
  title,
  description,
  footer = true,
  menu = true,
  noresize = false,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Head title={title} description={description} />
    <style is:global>
      html {
        background-color: rgb(245 245 245 / 1);
      }
    </style>
  </head>
  <body
    class=`${noresize ? '': 'max-w-3xl md:mx-auto lg:max-w-5xl xl:max-w-6xl ' } text-gray-900 antialiased`
  >
    {menu && <Menu />}
    <slot />
    {footer && <Footer />}
  </body>
</html>
